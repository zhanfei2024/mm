{{#extend "mail/layouts/main"}}
  {{#content "content"}}
    <span>Dear {{ fullName }},</span>
    <p>Title: Expense rejected</p>
    <p>Your Expense already rejected.</p>
    <p>Expense Type: {{ expenseType.name }}</p>
    <p>Date: {{ expense.date }}</p>
    <p>Cost: {{ expense.cost }}</p>
    <p>Remark: {{ expense.remark }}</p>
    <p>If this email means nothing to you, then it is possible that somebody else has entered your email address either deliberately or accidentally, so please ignore this email.</p>
    <p>Thanks,</p>
    <p>{{ siteTeamName }}</p>
    <p>For any further queries contact: {{ siteSupportEmail }}</p>
  {{/content}}
{{/extend}}
