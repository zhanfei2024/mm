{{#extend "mail/layouts/main"}}
  {{#content "content"}}
    <span>Dear {{ fullName }},</span>
    {{#if data.payroll}}
      <p>Title: A New Payroll Has Been Created</p>
      <p>Start time: {{ startedDate }}</p>
      <p>End time: {{ endedDate }}</p>
      <p>Pay Date: {{ payDate }}</p>
      <p>amount: {{ amount }}</p>
    {{/if}}
    {{#if data.salary}}
      <p>Title: You have a new salary message</p>
      {{#if data.payType}}
        <p>Pay Type: {{ data.payType.name }}</p>
      {{/if}}
      <p>Start time: {{ startedDate }}</p>
      <p>Pay Rate: {{ amount }}</p>
      <p>Unit: {{ unit }}</p>
    {{/if}}

    <p>If this email means nothing to you, then it is possible that somebody else has entered your email address either deliberately or accidentally, so please ignore this email.</p>
    <p>Thanks,</p>
    <p>{{ siteTeamName }}</p>
    <p>For any further queries contact: {{ siteSupportEmail }}</p>
  {{/content}}
{{/extend}}
