{{#extend "mail/layouts/main"}}
  {{#content "content"}}
    <span>Dear {{ fullName }},</span>
    <p>Title: You salary has been updated</p>
      {{#if data.payType}}
        <p>Pay Type: {{ oldSalary.payType.name }} -> {{ data.payType.name }}</p>
      {{/if}}
    <p>Start time: {{ oldSalary.effectiveDate }} -> {{ newSalary.effectiveDate }}</p>
    <p>Pay Rate: {{ oldSalary.payRate }} -> {{ newSalary.payRate }}</p>
    <p>Unit: {{ oldSalary.unit }} -> {{ newSalary.unit }}</p>
    <p>If this email means nothing to you, then it is possible that somebody else has entered your email address either deliberately or accidentally, so please ignore this email.</p>
    <p>Thanks,</p>
    <p>{{ siteTeamName }}</p>
    <p>For any further queries contact: {{ siteSupportEmail }}</p>
  {{/content}}
{{/extend}}
